<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sthottam.bahamianvat.MainActivity">


    <EditText
        android:id="@+id/Price"
        android:layout_width="291dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Price Here"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteY="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_above="@+id/AddButton"
        android:layout_alignLeft="@+id/AddButton"
        android:layout_alignStart="@+id/AddButton"
        android:layout_marginBottom="51dp"/>

    <Button
        android:id="@+id/AddButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Add VAT"
        tools:layout_editor_absoluteY="253dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/SubtractButton"
        android:layout_alignBottom="@+id/SubtractButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"/>

    <Button
        android:id="@+id/SubtractButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Subtract VAT"
        tools:layout_editor_absoluteY="253dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/Results"
        android:layout_alignRight="@+id/Results"
        android:layout_alignEnd="@+id/Results"/>

    <TextView
        android:id="@+id/Results"
        android:layout_width="300dp"
        android:layout_height="170dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="364dp"
        android:layout_marginBottom="79dp"
        android:lines="3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/Price"
        android:layout_alignRight="@+id/Price"
        app:srcCompat="@android:drawable/ic_menu_info_details"/>

</RelativeLayout>