<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sthottam.bahamianvat.MainActivity">


    <EditText
        android:id="@+id/Price"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="166dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:hint=" Enter Price Here"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="130dp"
 />

    <Button
        android:id="@+id/AddButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/SubtractButton"
        android:layout_toLeftOf="@+id/SubtractButton"
        android:text="Add VAT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/SubtractButton"
        tools:layout_editor_absoluteY="253dp" />

    <Button
        android:id="@+id/SubtractButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Subtract VAT"
        tools:layout_editor_absoluteY="253dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/Results"
        android:layout_alignRight="@+id/Results"
        android:layout_alignEnd="@+id/Results"/>

    <TextView
        android:id="@+id/Results"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="364dp"
        android:layout_marginBottom="50dp"
        android:lines="3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>